<%= render 'shared/errors', item: @skill %>

<div class='well'>
  <%= form_for @skill do |f| %>
    <div>
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name, placeholder: "username" %>
    </div>
    <div>
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, placeholder: "username", rows: 5 %>
    </div>
    <%= f.submit(@skill.new_record? ? "Create Skill" : "Update Skill", class: 'btn btn-primary') %>
  <% end %>
</div>